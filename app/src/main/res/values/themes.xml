<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="OparetaTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorPrimaryInverse">@color/colorSecondaryText</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">@font/averta_bold</item>
        <item name="textAppearanceOverline">@style/OparetaOverline</item>
        <item name="textAppearanceButton">@style/OparetaButton</item>
        <item name="textAppearanceCaption">@style/OparetaCaption</item>
        <item name="textAppearanceBody1">@style/OparetaBody1</item>
        <item name="textAppearanceBody2">@style/OparetaBody2</item>
        <item name="textAppearanceSubtitle1">@style/OparetaSubtitle1</item>
        <item name="textAppearanceSubtitle2">@style/OparetaSubtitle2</item>
        <item name="textAppearanceHeadline1">@style/OparetaHeadline1</item>
        <item name="textAppearanceHeadline2">@style/OparetaHeadline2</item>
        <item name="textAppearanceHeadline3">@style/OparetaHeadline3</item>
        <item name="textAppearanceHeadline4">@style/OparetaHeadline4</item>
        <item name="textAppearanceHeadline5">@style/OparetaHeadline5</item>
        <item name="textAppearanceHeadline6">@style/OparetaHeadline6</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Opareta" parent="OparetaTheme" />

    <style name="OparetaHintText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:fontFamily">@font/opareta</item>
    </style>

    <style name="OparetaHelperText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:fontFamily">@font/opareta</item>
    </style>

    <style name="OparetaOverline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:fontFamily">@font/opareta</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="OparetaButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/opareta</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="OparetaCaption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/opareta</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="OparetaBody1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/opareta</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:color">@color/colorPrimaryText</item>
    </style>

    <style name="OparetaBody2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/opareta</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:color">@color/colorPrimaryText</item>
    </style>

    <style name="OparetaSubtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/opareta</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:color">@color/colorPrimaryText</item>
    </style>

    <style name="OparetaSubtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/opareta</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:color">@color/colorPrimaryText</item>
    </style>

    <style name="OparetaHeadline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/opareta</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">96sp</item>
    </style>

    <style name="OparetaHeadline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:fontFamily">@font/opareta</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="OparetaHeadline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/opareta</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">48sp</item>
    </style>
    <style name="OparetaHeadline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:fontFamily">@font/opareta</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="OparetaHeadline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/opareta</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="OparetaHeadline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/opareta</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="OparetaSubtitle" parent="TextAppearance.AppCompat.Display4">
        <item name="android:fontFamily">@font/opareta</item>
    </style>


    <style name="HoverText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/averta_bold</item>
        <item name="titleTextColor">@color/mildly_black</item>
    </style>

    <style name="PinButtonTheme" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/opareta</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:typeface">normal</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="PosButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">@font/opareta</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="background">@color/colorPrimary</item>
        <item name="android:typeface">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>


