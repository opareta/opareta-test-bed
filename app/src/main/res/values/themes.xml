    <style name="HoverButton" parent="StaxButton">
        <item name="android:paddingStart">13dp</item>
        <item name="android:paddingEnd">13dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="PreLoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">
            shortEdges <!-- default, shortEdges, or never -->
        </item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="fontFamily">@font/averta_semibold</item>
        <item name="android:fontFamily">@font/averta_semibold</item>
    </style>

</resources>